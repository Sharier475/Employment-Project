@model IEnumerable<EmploymentProjectTeam02.Models.Country>;
@{
    ViewData["Title"] = "Index";
    int idno = 1;
}

<div class="container border mt-5 p-3">
    <p class="text-center">
        <a class="btn btn-primary" asp-action="AddorEdit"><i class="fa-solid fa-plus"></i> Create New</a>
    </p>
    <table id="countryTable" class="table table-bordered  table-striped table-responsive" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Country Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @idno
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CountryName)
                        </td>
                        <td class="text-end">

                            <a class=" btn btn-success" href="Country/AddorEdit/@item.Id"><i class="fa-solid fa-pen-to-square"></i> Edit</a> |

                            <a class="delete-button btn btn-danger" href="Country/Delete/@item.Id" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa-solid fa-trash"></i> Delete</a>

                        </td>
                    </tr>

                    idno += 1;



                }
            }

        </tbody>
    </table>
</div>